/* components/CFModal.wxss */

.modal-background {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.5);
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 1000;
}

.modal-content {
  width: 80%;
  max-width: 300px;
  background-color: #ffffff;
  border-radius: 10px;
  padding: 20px;
  text-align: center;
}

.modal-title {
  font-size: 18px;
  margin-bottom: 20px;
}

.modal-image {
  width: 100%;
  height: 150px;
  background-color: #cccccc;
  margin-bottom: 20px;
  border-radius: 10px;
}

.modal-button {
  width: 100%;
  padding: 10px;
  background-color: #007aff;
  color: white;
  border: none;
  border-radius: 10px;
  font-size: 16px;
}