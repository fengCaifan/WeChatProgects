/* pages/home/home.wxss */

.home_header {
  display: flex;
  flex-direction: column;
  justify-content: center;
  background-color: #3350f9;
  width: 100%;
  height: 150rpx;
  box-sizing: border-box;
  padding: 24rpx;
}

.home_header_title {
  color:white;
  font-size: 50rpx;
  font-weight: 1000;
}

.home_header_desc {
  color:white;
  font-size: 20rpx;
  font-weight: 400;
}

.func_entry {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  width: 100%;
  z-index: 1.0;
  padding: 24rpx 0;
}

.func_entry_btn {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 200rpx;
  width: 100%;
  border-radius: 10rpx;
  background-color: coral;
  margin: 0 24rpx;
}

.func_entry_btn_icon {
  width: 48rpx;
  height: 48rpx;
  margin-bottom: 8rpx;
}

.func_entry_btn_text {
  color:white;
  font-size: 20rpx;
  font-weight: 700;
}
