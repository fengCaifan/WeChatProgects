/* pages/user/team/team.wxss */

.team_page {
  display: flex;
  flex-direction: column;
  height: 100vh;
}

.team_page_header {
  padding: 0 24rpx;
}

.team_page_total {
  font-size: 28rpx;
  color: #666;
}

.total_number {
  font-size: 28rpx;
  color: red;
}

.team_list_container {
  flex: 1;
  background-color: #f5f5f5;
}

.team_item {
  margin: 20rpx 10rpx;
  background-color: #fff;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.1);
  overflow: hidden;
}

.team_item_header {
  padding: 20rpx;
  background-color: #fef6e3;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}

.team_item_title {
  font-size: 30rpx;
  color: #333;
}

.contact {
  display: flex;
  flex-direction: row;
  align-items: center;
}

.phone {
  font-size: 28rpx;
  color: #999;
  margin-right: 10rpx;
}

.icon {
  font-size: 28rpx;
  color: #999;
}

.team_item_stats {
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  padding: 20rpx 0;
}

.team_item_stats_item {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 20rpx 0;
}

.team_item_stats_item_value {
  font-size: 32rpx;
  color: black;
  font-weight: bold;
}

.team_item_stats_item_name {
  font-size: 28rpx;
  font-weight: lighter;
  margin-top: 10rpx;
}
