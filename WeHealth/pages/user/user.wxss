/* pages/user/user.wxss */
.user_page {
  display: flex;
  flex-direction: column;
}

.header_section {
  display: flex;
  flex-direction: column;
  align-items: center;
  background-color: #3350f9;
  /* padding: 32rpx; */
  width: 100%;
  height: 340rpx;
}

.user_detail {
  width: 100%;
  padding: 32rpx;
}

.user_phone {
  color: rgb(8, 8, 8);
  font-size: 32rpx;
  font-weight: bold;
  padding: 32rpx;
}

.balance_section {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-around;
  width: 100%;
  padding: 20rpx 0;
}

.balance_item{
  color: black;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  width: 50%;
}

.balance_item_detail {
  font-size: large;
}

.balance_item_desc {
  font-size: small;
}

.award_section {
  position: absolute;
  top: 240rpx;
  left: 5%;
  width: 90%;
  height: 130px;
  background-color: white;
  box-shadow: 0 8rpx 16rpx rgba(0, 0, 0, 0.1);
  font-size: 18px;
  border-radius: 10px;
  z-index: 10;
  display: flex;
  flex-direction: column;
}

.award_title {
  width: 100%;
  font-weight: bold;
  margin: 24rpx;
}

.account_info {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  background-color: white;
  margin: 16rpx;
}

.account_item {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  color: black;
  margin: 24rpx;
}

.account_item_money {
  font-size: 32rpx;
  font-weight: bold;
}

.account_item_desc {
  font-size: 24rpx;
  font-weight: lighter;
}

.menu_list {
  margin-top: 60px;
  max-height: 80%;
  overflow-y: scroll;
  padding-top: 16rpx;
  padding-bottom: 16rpx;
  border-radius: 16rpx;
  overflow: hidden;
}

.menu_item {
  display: flex;
  align-items: center;
  padding: 24rpx;
  margin: 16rpx; /* 增加间隙 */
  background-color: #ffffff; /* 背景色 */
  border-radius: 16rpx; /* 圆角 */
  box-shadow: 0 8rpx 16rpx rgba(0, 0, 0, 0.1); /* 阴影 */
}

.menu_item_icon {
  width: 48rpx;
  height: 48rpx;
  margin-right: 24rpx;
}

.menu_item_title {
  flex: 1;
  font-size: 28rpx;
  color: #333;
}

.menu_item_arrow {
  width: 24rpx;
  height: 24rpx;
}